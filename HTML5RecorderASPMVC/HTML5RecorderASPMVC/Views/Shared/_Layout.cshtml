<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("123APPS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a style="font-weight:300; font-size:12px;" href="~/">Audio Cutter</a></li>
                    <li><a style="font-weight:300; font-size:12px;" href="~/">Audio Cutter Pro</a></li>
                    <li><a style="font-weight:300; font-size:12px;" href="~/">Audio Converter</a></li>
                    <li><a style="font-weight:300; font-size:12px;" href="~/">Audio Joiner</a></li>
                    <li><a style="font-weight:300; font-size:12px;" href="~/">Video Converter</a></li>
                    <li><a style="font-weight:300; font-size:12px;" href="~/">Video Cutter</a></li>
                    <li><a style="font-weight:300; font-size:12px; color:white;" href="~/">Voice Recorder</a></li>
                    <li><a style="font-weight:300; font-size:12px;" href="~/">Video Recorder</a></li>
                    <li><a style="font-weight:300; font-size:12px;" href="~/">Archive Extractor</a></li>
                    <li><a style="font-weight:300; font-size:12px;" href="~/">PDF Tools</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <footer style="position: fixed; left: 0; bottom: 0; width: 100%; background-color: #333; color: #999; padding:10px;">
            <span>Contacts</span>&nbsp;&nbsp;
            <span>Privacy</span>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
